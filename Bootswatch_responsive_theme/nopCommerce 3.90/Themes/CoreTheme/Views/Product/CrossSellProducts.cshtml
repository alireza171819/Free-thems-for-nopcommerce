@model IList<ProductOverviewModel>
@using Nop.Web.Models.Catalog;
@if (Model.Count > 0)
{
    <div class="product-grid cross-sells col-md-12">
        <div class="title panel-heading">
            <h2>@T("ShoppingCart.CrossSells")</h2>
        </div>
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="item-box product-grid col-xs-12 col-sm-4 col-md-3 product-align clearfix">
                    <div class="thumbnail">@Html.Partial("_ProductBox", product)</div>
                </div>
            }
        </div>
    </div>
}