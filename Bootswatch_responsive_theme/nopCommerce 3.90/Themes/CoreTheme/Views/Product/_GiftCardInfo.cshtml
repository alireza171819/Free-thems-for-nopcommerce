@model ProductDetailsModel.GiftCardModel
@using Nop.Web.Models.Catalog;
@if (Model.IsGiftCard)
{
    <div class="giftcard">
            <div class="form-group row">
                <div class="col-sm-4 col-md-4">
                    @Html.LabelFor(model => model.RecipientName, new { @class= "control-label" }, ":")
                </div>
                <div class="col-sm-8 col-md-8">
                    @Html.TextBoxFor(model => model.RecipientName, new { @class = "recipient-name form-control" })
                </div>
            </div>

            @if (Model.GiftCardType == Nop.Core.Domain.Catalog.GiftCardType.Virtual)
            {
                <div class="form-group row">
                    <div class="col-sm-4 col-md-4">
                        @Html.LabelFor(model => model.RecipientEmail, new {@class="control-label" }, ":")
                    </div>
                    <div class="col-sm-8 col-md-8">
                        @Html.TextBoxFor(model => model.RecipientEmail, new { @class = "recipient-email form-control" })
                    </div>
                </div>
            }
            <div class="form-group row">
                <div class="col-sm-4 col-md-4">
                    @Html.LabelFor(model => model.SenderName, new { @class="control-label"}, ":")
                </div>
                <div class="col-sm-8 col-md-8">
                    @Html.TextBoxFor(model => model.SenderName, new { @class = "sender-name form-control" })
                </div> 
            </div>
            @if (Model.GiftCardType == Nop.Core.Domain.Catalog.GiftCardType.Virtual)
            {
                <div class="form-group row">
                    <div class="col-sm-4 col-md-4">
                        @Html.LabelFor(model => model.SenderEmail, new {@class="control-label" }, ":")
                    </div>
                    <div class="col-sm-8 col-md-8">
                        @Html.TextBoxFor(model => model.SenderEmail, new { @class = "sender-email form-control" })
                    </div>           
                </div>
            }
            <div class="form-group row">
                <div class="col-sm-4 col-md-4">
                    @Html.LabelFor(model => model.Message, new {@class="control-label" }, ":")
                </div>
                <div class="col-sm-8 col-md-8">
                    @Html.TextAreaFor(model => model.Message, new { @class = "message form-control" })
                </div>
            </div>
    </div>
}       