@model IList<ProductOverviewModel>
@{
    Layout = "_ColumnsThree";

    //title
    Html.AddTitleParts(T("PageTitle.RecentlyViewedProducts").Text);
    //page class
    Html.AppendPageCssClassParts("html-recently-viewed-products-page");
}

<div class="page recently-viewed-products-page">
    <div class="page-title">
        <h1>@T("Products.RecentlyViewedProducts")</h1>
    </div>
    <div class="page-body">
        @if (Model.Count > 0)
        {
            <div class="product-grid">
                @for (var i = 0; i < Model.Count(); i++)
                {
                    var product = Model[i];
                    string lastitem = "";

                    if (i % 2 == 0)
                    {
                        lastitem = "odd";
                    }
                    else
                    {
                        lastitem = "even";
                    }

                    <div class="item-box @lastitem">
                        @await Html.PartialAsync("_ProductBox", product)
                    </div>
                }
            </div>
        }
    </div>
</div>
