@model IList<ProductOverviewModel>
@if (Model.Count > 0)
{
    <div class="section-padding">
        <div class="section-width">
            <div class="product-grid bestsellers">
                <div class="section-head title">
                    <h2>@T("Bestsellers")</h2>
                </div>
                <div class="px_bestseller">
                    <div class="px_img">
                        <img src="@Url.Content("~/Themes/Phoenix/Content/images/Best_seller_left.png")" alt="" />
                    </div>
                    <div class="item-grid px_right_grid">
                        <div class="px_bestseller_itembox">
                            @foreach (var item in Model)
                         {
                            <div class="item-box">
                                @await Html.PartialAsync("_ProductBoxBestSeller", item)
                            </div>
                         }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}