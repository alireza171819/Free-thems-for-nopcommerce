@using Nop.Core
@using Nop.Services.Helpers
@using Nop.Web.Framework.UI
@inject IWorkContext workContext
@inject IThemeContext themeContext
@inject IUserAgentHelper userAgentHelper
@{
    var supportRtl = workContext.WorkingLanguage.Rtl;
    var themeName = themeContext.WorkingThemeName;

    //add main CSS file
    Html.AppendCssFileParts($"~/Themes/{themeName}/Content/css/styles.css");
    Html.AppendCssFileParts($"~/Themes/{themeName}/Content/css/bootstrap.min.css");
    Html.AppendCssFileParts($"~/Themes/{themeName}/Content/css/font-awesome.min.css");
    Html.AppendCssFileParts($"~/Themes/{themeName}/Content/css/owl.carousel.css");
    Html.AppendCssFileParts($"~/Themes/{themeName}/Content/css/owl.theme.css");
    Html.AppendCssFileParts($"~/Themes/{themeName}/Content/css/animate.css");
    <link href="https://fonts.googleapis.com/css?family=Arimo:400,700" rel="stylesheet">
    //add jQuery UI css file
    Html.AppendCssFileParts("~/lib/jquery-ui/jquery-ui-1.12.1.custom/jquery-ui.min.css");

}
