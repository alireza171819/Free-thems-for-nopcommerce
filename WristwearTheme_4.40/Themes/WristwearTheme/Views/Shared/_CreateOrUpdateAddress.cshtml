@model AddressModel

    <div class="edit-address form-horizontal">
        <input class="address-id" asp-for="Id" type="hidden" />
        <div class="form-group">
            <label class="control-label col-sm-2 col-md-2" asp-for="FirstName"></label>
            <div class="visible-xs form-title-rquired"><nop-required /></div>
            <div class="col-sm-6 col-md-6">
                <input class="form-control" asp-for="FirstName" />
            </div>
            <div class="col-sm-4 col-md-4">
                <div class="visible-lg visible-md visible-sm form-title-rquired"><nop-required /></div>
                <span asp-validation-for="FirstName"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2 col-md-2" asp-for="LastName"></label>
            <div class="visible-xs form-title-rquired"><nop-required /></div>
            <div class="col-sm-6 col-md-6">
                <input class="form-control" asp-for="LastName" />
            </div>
            <div class="col-sm-4 col-md-4">
                <div class="visible-lg visible-md visible-sm form-title-rquired"><nop-required /></div>
                <span asp-validation-for="LastName"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2 col-md-2" asp-for="Email"></label>
            <div class="visible-xs form-title-rquired"><nop-required /></div>
            <div class="col-sm-6 col-md-6">
                <input class="form-control" asp-for="Email" />
            </div>
            <div class="col-sm-4 col-md-4">
                <div class="visible-lg visible-md visible-sm form-title-rquired"><nop-required /></div>
                <span asp-validation-for="Email"></span>
            </div>
        </div>
        @if (Model.CompanyEnabled)
        {
            <div class="form-group">
                <label class="control-label col-sm-2 col-md-2" asp-for="Company"></label>
                <div class="visible-xs form-title-rquired"><nop-required /></div>
                <div class="col-sm-6 col-md-6">
                    <input class="form-control" asp-for="Company" />
                </div>
                <div class="col-sm-4 col-md-4">
                    @if (Model.CompanyRequired)
                    {
                        <div class="visible-lg visible-md visible-sm form-title-rquired"><nop-required /></div>
                    }
                    <span asp-validation-for="Company"></span>
                </div>
            </div>
        }
        @if (Model.CountryEnabled)
        {
            <div class="form-group">
                <label class="control-label col-sm-2 col-md-2" asp-for="CountryId"></label>
                <div class="visible-xs form-title-rquired"><nop-required /></div>
                <div class="col-sm-6 col-md-6">
                    <select asp-for="CountryId" class="form-control dropdown-toggle form-control category-iteam category-select" asp-items="Model.AvailableCountries"
                        data-trigger="country-select"
                        data-url="@(Url.RouteUrl("GetStatesByCountryId"))"
                        data-stateprovince="#@Html.IdFor(model => model.StateProvinceId)"
                        data-loading="#states-loading-progress"></select>
                </div>
                <div class="col-sm-4 col-md-4">
                    <div class="visible-lg visible-md visible-sm form-title-rquired"><nop-required /></div>
                    <span asp-validation-for="CountryId"></span>
                </div>
            </div>
        }
        @if (Model.CountryEnabled && Model.StateProvinceEnabled)
        {
            <div class="form-group">
                <label class="control-label col-sm-2 col-md-2" asp-for="StateProvinceId"></label>
                <div class="col-sm-6 col-md-6">
                    <select class="form-control dropdown-toggle category-iteam form-control category-select" asp-for="StateProvinceId" asp-items="Model.AvailableStates" data-trigger="state-select">
                    </select>
                    <span id="states-loading-progress" style="display: none;" class="please-wait">@T("Common.Wait")</span>
                    <span asp-validation-for="StateProvinceId"></span>
                </div>
            </div>
        }
        @if (Model.CountyEnabled)
        {
            <div class="form-group">
                <label class="control-label col-sm-2 col-md-2" asp-for="County"></label>
                <div class="visible-xs form-title-rquired"><nop-required /></div>
                <div class="col-sm-6 col-md-6">
                    <input asp-for="County" class="form-control" />
                </div>
                <div class="col-sm-4 col-md-4">
                    @if (Model.CountyRequired)
                    {
                        <div class="visible-lg visible-md visible-sm form-title-rquired"><nop-required /></div>
                    }
                    <span asp-validation-for="County"></span>
                </div>
            </div>
        }
        @if (Model.CityEnabled)
        {
            <div class="form-group">
                <label class="control-label col-sm-2 col-md-2" asp-for="City"></label>
                <div class="visible-xs form-title-rquired"><nop-required /></div>
                <div class="col-sm-6 col-md-6">
                    <input asp-for="City" class="form-control" />
                </div>
                <div class="col-sm-4 col-md-4">
                    @if (Model.CityRequired)
                    {
                        <div class="visible-lg visible-md visible-sm form-title-rquired"><nop-required /></div>
                    }
                    <span asp-validation-for="City"></span>
                </div>
            </div>
        }
        @if (Model.StreetAddressEnabled)
        {
            <div class="form-group">
                <label class="control-label col-sm-2 col-md-2" asp-for="Address1"></label>
                <div class="visible-xs form-title-rquired"><nop-required /></div>
                <div class="col-sm-6 col-md-6">
                    <input class="form-control" asp-for="Address1" />
                </div>
                <div class="col-sm-4 col-md-4">
                    @if (Model.StreetAddressRequired)
                    {
                        <div class="visible-lg visible-md visible-sm form-title-rquired"><nop-required /></div>
                    }
                    <span asp-validation-for="Address1"></span>
                </div>
            </div>
        }
        @if (Model.StreetAddress2Enabled)
        {
            <div class="form-group">
                <label class="control-label col-sm-2 col-md-2" asp-for="Address2"></label>
                <div class="visible-xs form-title-rquired"><nop-required /></div>
                <div class="col-sm-6 col-md-6">
                    <input class="form-control" asp-for="Address2" />
                </div>
                <div class="col-sm-4 col-md-4">
                    @if (Model.StreetAddress2Required)
                    {
                        <div class="visible-lg visible-md visible-sm form-title-rquired"><nop-required /></div>
                    }
                    <span asp-validation-for="Address2"></span>
                </div>
            </div>
        }
        @if (Model.ZipPostalCodeEnabled)
        {
            <div class="form-group">
                <label class="control-label col-sm-2 col-md-2" asp-for="ZipPostalCode"></label>
                <div class="visible-xs form-title-rquired"><nop-required /></div>
                <div class="col-sm-6 col-md-6">
                    <input class="form-control" asp-for="ZipPostalCode" />
                </div>
                <div class="col-sm-4 col-md-4">
                    @if (Model.ZipPostalCodeRequired)
                    {
                        <div class="visible-lg visible-md visible-sm form-title-rquired"><nop-required /></div>
                    }
                    <span asp-validation-for="ZipPostalCode"></span>
                </div>
            </div>
        }
        @if (Model.PhoneEnabled)
        {
            <div class="form-group">
                <label class="control-label col-sm-2 col-md-2" asp-for="PhoneNumber"></label>
                <div class="visible-xs form-title-rquired"><nop-required /></div>
                <div class="col-sm-6 col-md-6">
                    <input class="form-control" asp-for="PhoneNumber" />
                </div>
                <div class="col-sm-4 col-md-4">
                    @if (Model.PhoneRequired)
                    {
                        <div class="visible-lg visible-md visible-sm form-title-rquired"><nop-required /></div>
                    }
                    <span asp-validation-for="PhoneNumber"></span>
                </div>
            </div>
        }
        @if (Model.FaxEnabled)
        {
            <div class="form-group">
                <label class="control-label col-sm-2 col-md-2" asp-for="FaxNumber"></label>
                <div class="visible-xs form-title-rquired"><nop-required /></div>
                <div class="col-sm-6 col-md-6">
                    <input asp-for="FaxNumber" class="form-control" />
                </div>
                <div class="col-sm-4 col-md-4">
                    @if (Model.FaxRequired)
                    {
                        <div class="visible-lg visible-md visible-sm form-title-rquired"><nop-required /></div>
                    }
                    @Html.ValidationMessageFor(model => model.FaxNumber)
                </div>
            </div>
        }
        @if (Model.CustomAddressAttributes.Count > 0)
        {
            @await Html.PartialAsync("_AddressAttributes", Model.CustomAddressAttributes)
        }
    </div>
